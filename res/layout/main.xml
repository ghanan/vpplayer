<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="top"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/titulo"
			android:layout_weight="2"
			android:layout_height="match_parent"
			android:background="#FFFFFF"/>

		<Button
			android:id="@+id/next"
			android:text="&gt;|"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<ProgressBar
			android:id="@+id/iTiempo"
			android:layout_height="wrap_content"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_weight="1.0"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

		<ProgressBar
			android:id="@+id/iVolumen"
			android:layout_height="wrap_content"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_weight="1.0"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:weightSum="1.0">

		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="0.5"
			android:layout_width="0dp">

			<Button
				android:layout_height="wrap_content"
				android:text="|&lt;"
				android:layout_width="0dp"
				android:layout_weight="0.2"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0:00/0:00"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="0dp"
				android:layout_gravity="center"
				android:layout_weight="0.2"
				android:gravity="center"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="0.5"
			android:layout_width="2dp">

			<Button
				android:layout_height="wrap_content"
				android:text="V-"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<Button
				android:layout_height="wrap_content"
				android:text="V+"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent">

		<Button
			android:id="@+id/retroMM"
			android:text="-15m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/retroM"
			android:text="-3m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaM"
			android:text="+3m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaMM"
			android:text="+15m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent">

		<Button
			android:id="@+id/retroSS"
			android:text="-20s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/retroS"
			android:text="-5s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaS"
			android:text="+5s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaSS"
			android:text="+20s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

	</LinearLayout>

</LinearLayout>

