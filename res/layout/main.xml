<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="top"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/titulo"
			android:layout_weight="2"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:layout_width="0dp"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"/>

		<Button
			android:id="@+id/bNext"
			android:text="&gt;|"
			android:layout_weight="0.3"
			android:layout_width="0dp"/>

	</LinearLayout>

	<SeekBar
		android:id="@+id/volumen"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:weightSum="1.0">

		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="0.5"
			android:layout_width="0dp">

			<ProgressBar
				android:id="@+id/iTiempo"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				style="?android:attr/progressBarStyleHorizontal"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"/>

			<TextView
				android:id="@+id/tTiempo"				
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="0:00:00/0:00:00"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:gravity="center"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="0.5"
			android:layout_width="2dp">

			<Button
				android:id="@+id/volbajar"
				android:layout_height="wrap_content"
				android:text="V-"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<Button
				android:id="@+id/volsubir"
				android:layout_height="wrap_content"
				android:text="V+"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent">

		<Button
			android:id="@+id/retroMM"
			android:text="-15m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/retroM"
			android:text="-3m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaM"
			android:text="+3m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaMM"
			android:text="+15m"
			android:layout_weight="1.0"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent">

		<Button
			android:id="@+id/retroSS"
			android:text="-20s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/retroS"
			android:text="-5s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaS"
			android:text="+5s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

		<Button
			android:id="@+id/avanzaSS"
			android:text="+20s"
			android:layout_weight="1.0"
			android:layout_width="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bPrev"
			android:layout_height="wrap_content"
			android:text="|&lt;"
			android:layout_width="0dp"
			android:layout_weight="0.3"/>

		<Button
			android:id="@+id/bPausa"
			android:layout_height="wrap_content"
			android:text="| |"
			android:layout_width="0dp"
			android:layout_weight="0.3"/>

		<Button
			android:id="@+id/bAbrir"
			android:layout_height="wrap_content"
			android:text="@string/abrir"
			android:layout_width="0dp"
			android:layout_weight="0.3"/>

		<Button
			android:id="@+id/bStop"
			android:layout_height="wrap_content"
			android:text="stop"
			android:layout_width="0dp"
			android:layout_weight="0.3"/>

	</LinearLayout>

</LinearLayout>

